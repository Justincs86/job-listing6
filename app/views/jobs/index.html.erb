<div class="pull-right">
  <%= link_to("Add a Job", new_job_path, class: "btn btn-primary") %>
</div>
<br><br><br>

<table class="table table-bordered">
  <thead>
      <tr>
          <th> Title </th>
          <th> Description</th>
      </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
          <td> <%= job.title %> </td>
          <td> <%= job.description %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
