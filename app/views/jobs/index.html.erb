<div class="dropdown pull-right">
  <button class="btn btn-default dropdown-toggle" data-toggle="dropdown" >
    Option<a class="caret"></a>
  </button>
  <ul class="dropdown-menu" >
    <li> <%= link_to("wage_lower_bound", jobs_path(:order => "by_lower_bound")) %></li>
    <li> <%= link_to("wage_upper_bound", jobs_path(:order => "by_upper_bound")) %></li>
    <li> <%= link_to("time", jobs_path) %></li>
  </ul>
</div>
<br><br><br>

<table class="table table-bordered">
  <thead>
      <tr>
          <th> Title </th>
          <th> Wage_lower_bound</th>
          <th> wage_upper_bound </th>
          <th> Time</th>
      </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
          <td> <%= link_to(job.title, job_path(job)) %> </td>
          <td> <%= job.wage_lower_bound %> </td>
          <td> <%= job.wage_lower_bound %> </td>
          <td> <%= job.created_at.to_s(:long) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
