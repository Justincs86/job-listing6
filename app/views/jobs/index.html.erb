

<table class="table table-bordered">
  <thead>
      <tr>
          <th> Title </th>
          <th> Description</th>
          <th> Time </th>
      </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
          <td> <%= job.title %> </td>
          <td> <%= job.description %> </td>
          <td> <%= job.created_at.to_s(:long) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
